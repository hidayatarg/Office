@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Category Page";
}

<div class="text-center">
    <h1 class="display-4">Categories</h1>
</div>
<a class="btn btn-primary mb-2" asp-action="create">Add Category</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
